<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<%= form_tag(books_path, method: "get") do %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<div id="books" class ="inarow" >
  <% @books.each do |book| %>
    <%= render book %>
    <p>
    <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
